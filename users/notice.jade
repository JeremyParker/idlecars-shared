.form-container
  .text-wrapper
    section
      label(for="{{label}}") {{label}}

    section.content-container
      .content-row(ng-repeat="content in contents track by $index")
        .title(ng-show='content.title') {{content.title}}:
        .content {{content.content}}

    section
      div(ng-repeat="button in buttons track by $index")
        button.slimer-button(ng-show="!button.dateOptions", ng-click="button['click']()") {{button.value}}

        button.slimer-button(
          ng-show="button.dateOptions"
          pick-a-date="date",
          pick-a-date-options="button.dateOptions",
        ) {{button.value}}
